{% extends 'Base.twig' %}
{% block title %}Placeholder Create Article{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="/css/createPage.css">
{% endblock %}
{% block content %}
    <div class="article-page">
        <div class="title">
            Create Article
        </div>
        <form class="article-form" method="POST" action="/article">
            <div class="form-sub-container">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title">
            </div>
            <label for="body">Text:</label>
            <textarea id="body" name="body"></textarea>
            <button class="button" type="submit">Submit Article</button>
        </form>
    </div>
{% endblock %}